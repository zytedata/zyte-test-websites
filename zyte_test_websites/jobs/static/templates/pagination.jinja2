<nav>
    <ul class="pagination">
        {% if current_page > 1 %}
            <li class="page-item prev">
                <a class="page-link"
                   href="{{ base_url.update_query(page=current_page - 1) }}">← Previous</a>
            </li>
        {% else %}
            <li class="page-item prev disabled">
                <span class="page-link">← Previous</span>
            </li>
        {% endif %}
        {% for page in range(1, total_pages + 1) %}
            {% if page == current_page %}
                <li class="page-item active">
                    <span class="page-link">{{ page }}</span>
                </li>
            {% else %}
                <li class="page-item">
                    <a class="page-link" href="{{ base_url.update_query(page=page) }}">{{ page }}</a>
                </li>
            {% endif %}
        {% endfor %}
        {% if current_page < total_pages %}
            <li class="page-item next">
                <a class="page-link"
                   href="{{ base_url.update_query(page=current_page + 1) }}">Next →</a>
            </li>
        {% else %}
            <li class="page-item next disabled">
                <span class="page-link">Next →</span>
            </li>
        {% endif %}
    </ul>
</nav>
