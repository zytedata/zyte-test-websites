<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Products in {{ category.name }}</title>
        <link rel="stylesheet"
              href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
              integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
              crossorigin="anonymous">
    </head>
    <body>
        <main class="container">
            {% include "breadcrumbs.jinja2" %}
            <h1>{{ category.name }}</h1>
            {% if subcategories %}
                <h2>{{ subcategories | count }} subcategories:</h2>
                <ul id="subcategories">
                    {% for subcat in subcategories %}
                        <li class="subcategory-li">
                            <a class="subcategory-link"
                               href="{{ url('category', category_id=subcat.id) }}">{{ subcat.name }}</a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
            {% if products %}
                <h2>{{ total_products }} products:</h2>
                <ol id="products" start="{{ start + 1 }}">
                    {% for product in products %}
                        <li class="product-li">
                            <a class="product-link"
                               href="{{ url('product_detail', product_id=product.id) }}">{{ product.name }}</a>
                            <p class="mb-0">{{ product.price }}</p>
                            {% if product.instock %}
                                <p class="mb-0">In stock</p>
                            {% else %}
                                <p class="mb-0">Out of stock</p>
                            {% endif %}
                            {% include "rating.jinja2" %}
                        </li>
                    {% endfor %}
                </ol>
                {% include "pagination.jinja2" %}
            {% endif %}
        </main>
    </body>
</html>
